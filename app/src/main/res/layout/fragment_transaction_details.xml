<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.transactiondetails.TransactionDetailsFragment"
        android:paddingTop="@dimen/auth_padding">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/user_image_hw"
            android:layout_height="@dimen/user_image_hw"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <data>
        <import type="androidx.lifecycle.LiveData"/>
        <import type="com.test.fasterpay.vo.MoneyTransaction"/>
        <import type="com.test.fasterpay.vo.Wallet"/>
        <import type="com.test.fasterpay.ui.formatters.TextFormatter"/>

        <variable
            name="wallet"
            type="LiveData&lt;Wallet>" />
        <variable
            name="transaction"
            type="LiveData&lt;MoneyTransaction>" />
    </data>
</layout>