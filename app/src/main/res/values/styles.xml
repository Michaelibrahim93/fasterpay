<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/app_default_bg</item>
    </style>

    <style name="SmallSeparator">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">77dp</item>
        <item name="android:background">@color/semi_transparent</item>
    </style>

    <style name="TextSmallWhite">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/promxima_reg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextRegularWhite">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/promxima_med</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextSubtitleWhite">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/promxima_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextTitleWhite">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/promxima_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextExtraBig">
        <item name="android:textSize">38sp</item>
        <item name="android:fontFamily">@font/promxima_med</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextRegularBlack" parent="TextRegularWhite">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSubtitleBlack" parent="TextSubtitleWhite">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProfileOptionsText" parent="TextSubtitleBlack">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="drawableEndCompat">@drawable/ic_baseline_arrow_right</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:drawablePadding">@dimen/default_padding</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="GreySeparator">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="background">@color/app_grey</item>
    </style>

    <style name="TextSmallBlack" parent="TextSmallWhite">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextTitleBlack" parent="TextTitleWhite">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextAuthStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_field_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white_semi_transparent</item>
        <item name="android:background">@drawable/rounded_corner_semi_transparent</item>
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingEnd">@dimen/default_padding</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BtnOrangeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_field_height</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/rounded_corner_orange</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/promxima_reg</item>
    </style>

    <style name="BtnPurpleStyle" parent="BtnOrangeStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/rounded_corner_semi_transparent</item>
    </style>
</resources>