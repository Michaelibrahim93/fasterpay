<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/app_default_bg</item>
    </style>

    <style name="SmallSeparator">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">77dp</item>
        <item name="android:background">@color/semi_transparent</item>
    </style>

    <style name="TextSmallWhite">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/promxima_reg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextRegularWhite">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/promxima_med</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextSubtitleWhite">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/promxima_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextTitleWhite">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/promxima_light</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextExtraBig">
        <item name="android:textSize">38sp</item>
        <item name="android:fontFamily">@font/promxima_med</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>